# ===== CONFIGURACIÃ“N EMPRESARIAL =====
# Environment
NODE_ENV=development
PORT=3001

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://tiendamoderna.com

# Security Configuration
JWT_SECRET=tienda-moderna-enterprise-super-secret-jwt-key-2024-production-ready
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT_MAX=500
AUTH_RATE_LIMIT_MAX=10

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=10

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=public/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx

# Performance Configuration
COMPRESSION_LEVEL=6
CACHE_MAX_AGE=3600
STATIC_CACHE_MAX_AGE=31536000

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000

# Cluster Configuration
CLUSTER_MODE=false
MAX_WORKERS=4
