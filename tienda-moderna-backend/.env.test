# Test Environment Configuration
NODE_ENV=test
PORT=3002

# Test Database
DATABASE_URL="mysql://test_user:test_password@localhost:3306/tienda_moderna_test"

# JWT Secrets (use different secrets for testing)
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration (use test settings)
SENDGRID_API_KEY=test-sendgrid-key
FROM_EMAIL=test@tiendamoderna.com
FROM_NAME="Tienda Moderna Test"

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=test_uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Redis (test instance)
REDIS_URL=redis://localhost:6380
REDIS_PASSWORD=

# API Key
API_KEY=test-api-key-for-internal-services

# Rate Limiting (more lenient for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=error
LOG_FILE=logs/test.log

# Disable external services in tests
ENABLE_EMAIL=false
ENABLE_ANALYTICS=false
ENABLE_EXTERNAL_APIS=false
