{
  "name": "tienda-moderna-backend",
  "version": "1.0.0",
  "description": "Backend API for Tienda Moderna E-commerce Platform",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "npm run prisma:generate && npm run prisma:deploy",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.js",
    "lint": "eslint src --ext .js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"prisma/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"prisma/**/*.js\" \"*.js\"",
    "type-check": "echo 'Type checking not applicable for JavaScript project'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "node prisma/seed.js",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart",
    "clean": "rm -rf node_modules dist coverage logs uploads",
    "clean:logs": "rm -rf logs/*.log",
    "clean:uploads": "rm -rf uploads/*",
    "backup:db": "mysqldump -u root -p tienda_moderna > backup_$(date +%Y%m%d_%H%M%S).sql",
    "health": "node healthcheck.js"
  },
  "keywords": [
    "ecommerce",
    "api",
    "nodejs",
    "express",
    "mysql",
    "prisma",
    "jwt",
    "rest"
  ],
  "author": "Tienda Moderna Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "joi": "^17.11.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "redis": "^4.6.11",
    "stripe": "^14.9.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "express-fileupload": "^1.4.3",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "prisma": "^5.7.1",
    "nodemon": "^3.0.2",
    "vitest": "^1.0.4",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@vitest/coverage-v8": "^1.0.4",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
